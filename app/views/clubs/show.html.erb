<div class="container-fluid">
	<div class="row">
		<div class="col-xs-4 text-center">
			<%= image_tag @club.avatar.url(:medium) %>
			<h2>Informacion del Club</h2>
			<h4 class="text-left">Nombre: <%= @club.name %></h4>
			<h4 class="text-left">Dirección: <%= @club.address %></h4>
			<h4 class="text-left">Correo del Club: <%= @club.email %></h4>
			<h4 class="text-left">Municipio: <%= @club.municipality %></h4>
			<h4 class="text-left">Telefono: <%= @club.phone %></h4>
			<h4 class="text-left">Celular: <%= @club.cellphone %></h4>
		</div>
		<div class="col-xs-4 text-left">
			<h2 class="text-center">Informacion del Presidente</h2>
			<h4>Nombre: <%= @club.president.name %></h4>
			<h4>Cédula: <%= @club.president.identification %></h4>
			<h4>Correo del Presidente: <%= @club.president.email %></h4>
			<h4>Telefono: <%= @club.president.phone %></h4>
			<h4>Fax: <%= @club.president.fax %></h4>
			<h4>Celular: <%= @club.president.cellphone %></h4>
		</div>
		<div class="col-xs-4 text-left">
			<h2 class="text-center">Informacion del Manager</h2>
			<h4>Nombre: <%= @club.manager.name %></h4>
			<h4>Correo del Manager: <%= @club.manager.email %></h4>
			<h4>Telefono: <%= @club.manager.phone %></h4>
			<h4>Celular: <%= @club.manager.cellphone %></h4>
		</div>
	</div>
	<div class="row text-center">
		<%= link_to 'Editar Club', edit_club_path(@club), :class => "btn btn-default"%>
		<%= link_to 'Ir a inscripciones', root_path, :class => "btn btn-default"%>
	</div>
</div>