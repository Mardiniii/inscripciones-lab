<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 new_register">
      <h2 class="text-center">Editar Cuenta Usuario <%= current_user.name %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :nombre %><br />
          <%= f.text_field :name, :class => "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :apellidos %><br />
          <%= f.text_field :last_name, :class => "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :numero_identificacion %><p class="formulario">:  (Solo ingrese números sin espacios)</p>
          <%= f.text_field :identification_number, :class => "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :celular %><p class="formulario">:  (Solo ingrese números sin espacios)</p>
          <%= f.text_field :cellphone, :class => 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :class => "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :nueva_contraseña %> <i>(deje este campo en blanco si no quiere cambiarla)</i><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :confirmar_nueva_contraseña %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :current_password, "Contraseña actual" %> <i>(Introduzca su contraseña actual para confirmar los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
        </div>

        <div class="actions form-group text-center">
          <%= f.submit "Actualizar", :class => "btn btn-lg btn-success" %>
        </div>
      <% end %>

      <h3>Cancelar mi cuenta</h3>

      <p>Insatisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

      <%= link_to "Regresar", :back %>
    </div>
  </div>
</div>