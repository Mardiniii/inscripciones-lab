<div class="container new_register">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 text-center">
			<div class="col-xs-12">
				<h1>Dirección: <%= @field.address %></h1>
				<h2>Tipo: <%= @field.field_type.humanize %></h2>
			</div>
			<table class="table table-hover">
				<tr>
					<th class="text-center">No. Horario</th>
					<th class="text-center">Día</th>
					<th class="text-center">Hora de apertura</th>
					<th class="text-center">Hora de cierre</th>
				</tr>
				<% @field.field_hours.each_with_index do |field_hour, index| %>
					<tr>
						<td><%= index+1 %></td>
						<td><%= field_hour.day.name %></td>
						<td><%= field_hour.open_hour.strftime("%I:%M %p")%></td>
						<td><%= field_hour.closing_time.strftime("%I:%M %p") %></td>
					</tr>
				<% end %>
			</table>
			<div class="col-xs-4 col-xs-offset-4">
				<%= link_to 'Regresar a Canchas', fields_path, class: "btn btn-success" %>
			</div>
		</div>
	</div>
</div>